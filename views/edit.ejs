<% include layout %>
  <h1>EDIT <%= article.title%> </h1> 
  <form action="/articles/<%= article._id%>/edit" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" name="title" type="text" value="<%= article.title %> ">
    </div>
    <div class="form-group">
        <label for="author">Author</label>
        <input class="form-control" name="author" type="text" value=" <%= article.author%>">
    </div>
    <div class="form-group">
        <label for="body">Body</label>
        <textarea class="form-control" name="body"> <%=article.body %>   </textarea>
    </div>
    <br>
      <input class="btn btn-primary" value="Submitt" type="submit"/>
 </form> 
